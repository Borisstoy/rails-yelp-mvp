<div class="main-wrapper">
  <div class="wrapper-skinny">

    <div class="action-buttons-show">
      <div class="action-back">
        <%= link_to "Back to the list", restaurants_path, class:'button-back' %>
      </div>
    </div>

    <h1><%= @restaurant.name %></h1>

    <div class="resto-description">
      <div class="labels-show">
        <ul id="list-labels">
          <li>
            Address
          </li>
          <li>
            Phone number
          </li>
          <li>
            Category
          </li>
          <li>
            Average ratings
          </li>
        </ul>
      </div>
      <div class="dynamic-content">
        <ul id="list-dynamic">
          <li>
            <%= @restaurant.address %>
          </li>
          <li>
            <%= @restaurant.phone_number %>
          </li>
          <li>
            <%= @restaurant.category %>
          </li>
          <li>
            <%= @restaurant.average_ratings %>
          </li>
        </ul>
      </div>
    </div>

    <hr>

    <div class="wrapper-review">
      <h3 class="text-align">Add a review to <%= @restaurant.name %></h3>
      <%= simple_form_for([@restaurant, @review]) do |f|%>
        <%= f.error_notification %>
        <%= f.input :content, placeholder: 'Type in your review' %>
        <%= f.input :rating %>
        <%= f.submit "Add a review", class:'button-main' %>
      <% end %>
    </div>

    <hr>

    <h3>Reviews</h3>

    <div class="reviews">
      <div class="header-reviews">
        <div class="comments-header">
          What they think
        </div>
        <div class="ratings-header">
          Their ratings
        </div>
      </div>
      <% @restaurant.reviews.each do |review| %>
      <div class="reviews-wrapper">
          <div class="reviews-content">
            <%= review.content %>
          </div>
          <div class="reviews-rating">
            <%= review.rating %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
